<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonanorman.android.renderclient.sample">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />


    <application
        android:name="com.jonanorman.android.renderclient.sample.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.jonanorman.android.renderclient.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.jonanorman.android.renderclient.sample.GLShaderLayerActivity"
            android:label="GLShaderLayerActivity"></activity>

        <activity
            android:name="com.jonanorman.android.renderclient.sample.GLSurfaceLayerActivity"
            android:label="GLSurfaceLayerActivity"></activity>

        <activity
            android:name="com.jonanorman.android.renderclient.sample.GLLayerGroupActivity"
            android:label="GLLayerGroupActivity"></activity>

        <activity
            android:name="com.jonanorman.android.renderclient.sample.GLViewLayerActivity"
            android:label="GLViewLayerActivity"></activity>
        <activity
            android:name="com.jonanorman.android.renderclient.sample.GLMaterialObjectLayerActivity"
            android:label="GLMaterialObjLayerActivity"></activity>
        <activity
            android:name="com.jonanorman.android.renderclient.sample.GLGaussianBlurEffectActivity"
            android:label="GLGaussianBlurEffectActivity"></activity>
    </application>

</manifest>